<br />
 <div class="booyah-box col-10 offset-1">
  <h1>What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
  <% if course.image_url %>
  <%= image_tag course.image_url, class: 'img-fluid' %>
  <% end %>
   <br />
   <div class="row">
    <div class="col-12 col-sm-8">
   <%= course.description %>
    </div>
   <div class="col-12 col-sm-4 text-center">
   <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
    </div>
   </div>
   <hr class="col-8 offset-2">
   <br class="clr" />
  <% end %>

  <h1> What I'm Teaching</h1>
  <% current_user.courses.each do |course| %>
   <h3 class="text-center">
    <%= link_to course.title,course_path(course) %>
   </h3>
   <br />
  <% if course.image_url %>
  <%= image_tag course.image_url, class: 'img-fluid' %>
  <% end %>
   <br />
   <div class="row">
    <div class="col-12 col-sm-8">
     <%= course.description %>
    </div>
    <div class="col-12 col-sm-4 text-center">
     <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
   </div>
 </div>
  <hr class="col-8 offset-2">
  <br class="clr" />
 <% end %>
</div>


 <div class="-box profile">
  <div class="row">
     <div class="col-4">
     <%= image_tag avatar_url(@user), class: "avatar2" %>
   </div>

   <div class="col-8 title"><br />
    <h1><%= @user.email %></h1><br />
    <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3><br />
    <h4><%= @user.fullname %></h4><br />
    <h4><%= @user.phone_number%></h4>
   </div>
  </div>
 <div class="clear"></div>
</div



